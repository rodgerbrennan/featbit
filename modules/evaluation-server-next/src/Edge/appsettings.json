{
  "Logging": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Npgsql.Command": "Warning",
        "Streaming.Scaling.Service": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/edge-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "LogLevel": {
      "Default": "Information",
      "Streaming.Scaling.Service.WebSocketService": "Warning",
      "Streaming.Scaling.Manager.RedisManager": "Information"
    }
  },
  "Kestrel": {
    "Limits": {
      "MaxConcurrentConnections": 5000,
      "MaxConcurrentUpgradedConnections": 5000,
      "MaxRequestBodySize": 1048576,
      "KeepAliveTimeout": "00:02:00",
      "RequestHeadersTimeout": "00:00:30"
    },
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:5231"
      }
    }
  },
  "Performance": {
    "MaxWebSocketConnections": 3000,
    "MessageBufferSize": 2048,
    "ConnectionTimeoutMs": 120000,
    "MessageQueueLimit": 100,
    "EnableConnectionThrottling": true,
    "GCCollectionMode": "Optimized"
  },
  "Streaming": {
    "TokenTimeoutMs": 30000,
    "MaxMessageSize": 32768,
    "KeepAliveIntervalMs": 30000,
    "CloseTimeoutMs": 5000
  },
  "Kafka": {
    "Producer": {
      "bootstrap.servers": "kafka:9092",
      "linger.ms": "50"
    },
    "Consumer": {
      "bootstrap.servers": "kafka:9092",
      "auto.offset.reset": "latest",
      "enable.auto.commit": true,
      "auto.commit.interval.ms": "5000",
      "enable.auto.offset.store": false
    }
  },
  "DbProvider": "MongoDb",
  "MqProvider": "Redis",
  "CacheProvider": "None",
  "MongoDb": {
    "ConnectionString": "mongodb://admin:password@mongodb:27017",
    "Database": "featbit"
  },
  "Postgres": {
    "ConnectionString": "Host=postgresql;Port=5432;Username=postgres;Password=please_change_me;Database=featbit",
    "Password": ""
  },
  "Redis": {
    "ConnectionString": "redis:6379",
    "Password": ""
  },
  "AllowedHosts": "*"
}
